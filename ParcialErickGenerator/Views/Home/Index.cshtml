@{
    ViewBag.Title = "LOGIN";
}

<div class="limiter">
    <div>
        <div class="wrap-login100" style="  width: 860px;">
            <div class="login100-pic js-tilt" data-tilt>
                <img src="~/Content/images/img-01.png" alt="IMG">
            </div>

            <form method="post" id="formulario" class="login100-form validate-form">
                <span class="login100-form-title" style="padding-bottom:30px;">
                    Generate Cedula Login
                </span>

                <div class="wrap-input100 validate-input" data-validate="Se requiere un nombre de Usuario registrado">
                    <input class="input100" type="text" name="USUARIO" id="usuario" placeholder="Usuario">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Es obligatoria la contraseña">
                    <input class="input100" type="password" name="PASSAWORD" id="passaword" placeholder="Contraseña">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="container-login100-form-btn">
                    <input type="submit" value="ENTRAR" class="login100-form-btn" />
                </div>
                <div class="text-center p-t-12">
                    <span class="txt1">
                        Olvide:
                    </span>
                    <a class="txt2" href="#">
                        Usuario / Contraseña?

                        @ViewBag.Login
                    </a>

                   <div style="color:red;"> @ViewBag.Login</div>
                </div>

                <div class="text-center p-t-90">
                    <a class="txt2" href="Register">
                        Registrarse En Nuestra Pagina
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")

    <script type="text/javascript">
        $(document).ready(function () {
            $('#formulario').each(function () {
                this.reset();
            });
        });


        $("#formulario").submit(function () {
            if ($("#usuario").val().length < 1) {
                alert("El Usuario es obligatorio");

            }

          if ($("#passaword").val().length < 1) {
                alert("La COntraseña es obligatoria");


            }

        });

    </script>



    @Scripts.Render("//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("/scripts/jquery.min.js");
}