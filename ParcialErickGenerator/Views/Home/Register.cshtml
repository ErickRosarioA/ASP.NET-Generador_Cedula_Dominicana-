
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="limiter">
    <div>
        <div class="wrap-login100" style=" padding-top:2%;  padding-left:22%; width: 500px;">
            <div class="container">
                <img src="~/Content/images/userRegister.png" width="80" height="80" alt="IMG">
            </div>

            <form method="post" id="formulario" class="login100-form validate-form">
                <span class="login100-form-title" style="padding-bottom:30px;">
                    REGISTRAR USUARIO
                </span>

                <div class="wrap-input100 validate-input" data-validate="Se requiere un nombre de Usuario Para Verificar">
                    <input class="input100" type="text" name="NOMBRECOMPLETO" id="Nombre" placeholder="Nombre Completo">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-id-badge" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Se requiere un nombre de Usuario registrado">
                    <input class="input100" type="text" name="USUARIO" id="Usuario" placeholder="Usuario">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user" aria-hidden="true"></i>
                    </span>
                </div>


                <div class="wrap-input100 validate-input" data-validate="Es obligatoria la contraseña">
                    <input class="input100" type="password" name="PASSAWORD" id="contra" placeholder="Contraseña">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Es obligatoria la Confirmacion de contraseña">
                    <input class="input100" type="password" name="CONFIRMPASSAWORD" id="contra2" placeholder=" Confirmar Contraseña">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="container-login100-form-btn">
                    <input type="submit" value="REGISTRAR" class="login100-form-btn" />
                </div>

                <div class="text-center p-t-30">
                    <a class="txt2" href="Index">
                        Volver Al Area de Login
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jquery")

    <script type="text/javascript">
        $(document).ready(function () {
            $('#formulario').each(function () {
                this.reset();
            });
        });


        $("#formulario").submit(function () {
            if ($("#Usuario").val().length < 1) {
                alert("El Usuario es obligatorio");

            }
            if ($("#Nombre").val().length < 1) {
                alert("El Nombre es obligatoria");


            }

          if ($("#contra").val().length < 1) {
                alert("La COntraseña es obligatoria");


            }

            if ($("#contra").val() != $("#contra2").val()) {
                alert("Las contraseñas no son iguales favor repetir");


            }



        });

    </script>



    @Scripts.Render("//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("/scripts/jquery.min.js");
}
