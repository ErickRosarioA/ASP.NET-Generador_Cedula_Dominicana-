@model IEnumerable<ParcialErickGenerator.Models.CEDULAS>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="margin:2%;">
    <a class="btn btn-warning"  href="/Home/Inicio">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
        &nbsp;&nbsp; REGRESAR
    </a>
</div>

<ul class="list-group">

    <li class="list-group-item" style="background-color:darkslategrey; "><h2 style="color:white; font-weight:bold; font-size:50px; ">Lista de Cedulas Generadas</h2></li>
    @foreach (var item in Model)
    {


        <li class="list-group-item">

            <div class="container-fluid">

                <div class="row">
                    <div class="col-2" style="border-right:solid 2px  darkslategrey; padding:0!important;">
                        <img src="~/Content/images/@item.FOTO" width="100 " height="100 " alt="IMG " style=" border-radius:30px; ">
                    </div>
                    <div class="col-5" style=" border-right:solid 2px  darkslategrey; padding:0!important;">
                        <div style="text-align:left; margin-top:3%; margin-left:4%;">
                            <div style="font-weight:bold; ">
                                @Html.DisplayFor(modelItem => item.ID_CEDULAS)
                            </div>
                            <div>
                                @Html.DisplayFor(modelItem => item.NOMBRES) @Html.DisplayFor(modelItem => item.APELLIDOS)
                            </div>
                            <div>
                                @Html.DisplayFor(modelItem => item.OCUPACION)
                            </div>
                        </div>
                    </div>

                    <div class="col" style="margin-top:3%; ">
                        <a class="btn btn-success" href="Edit/@item.ID"> MODIFICAR</a>
                        <a class="btn btn-danger" href="Delete/@item.ID"> ELIMINAR</a>
                        <a class="btn btn-primary" href="CedulaVista/@item.ID"> IMPRIMIR</a>
                    </div>

                </div>

            </div>

        </li>


    }

</ul>

